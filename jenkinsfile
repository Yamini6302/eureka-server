pipeline {
    agent any

    tools {
		maven 'my-maven'
		jdk 'my-jdk'
	}

    stages {
        stage('Git') {
            steps {
                echo 'Git clone done'
                git url:'https://github.com/Yamini6302/eureka-server.git', branch:'main'
            }
        }
         stage('Build') {
            steps {
                echo 'Build done'
                bat "mvn clean install -DskipTests"
            }
         }
          stage('Test') {
            steps {
                echo 'Test done'
                bat "mvn test"
            }
          }
           stage('Deploy') {
            steps {
                echo 'Deploy done'
                 bat "docker build -t eureka-server ."
			             bat "docker run -p 8762:8762 -d --name eureka-server eureka-server"
            }

        }

    }

}
